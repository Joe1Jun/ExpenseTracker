<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Document</title>
  </head>
  <body>
    <%- include ('navbar') %>

    <div class="text-center">
      <header>
        <h1 class="mt-5">Expense Tracker</h1>
      </header>
    </div>
    <div class="container rounded-3" id="container">
      <form
        action="auth/addExpense"
        method="POST"
        id="expense-form"
        class="mt-3"
      >
        <div class="form-group">
          <input
            type="text"
            id="description"
            class="form-control"
            placeholder="Expense Description"
            required
            name="description"
          />
        </div>
        <br />

        <div class="form-group">
          <input
            type="text"
            id="amount"
            class="form-control"
            placeholder="Amount"
            required
            name="amount"
          />
        </div>
        <br />

        <button type="submit" class="btn btn-primary text-center">
          Add Expense
        </button>
      </form>
      <form action="/viewAllExpenses" method="GET">
        <button type="submit" class="btn btn-danger">View all expenses</button>
      </form>
      <!-- checks if there are expenses being passed to the ejs page-->
      <% if (expenses && expenses.length > 0) { %>
      <ul id="expense-list" class="list-group mt-3">
        <% expenses.forEach((expense, index) => { %>
        <form
          action="/auth/deleteExpense"
          method="POST"
          class="expense-item-form"
        >
          <li class="list-group-item rounded-3">
            <h4><%= expense.description %></h4>
            <p>â‚¬<%= expense.amount %></p>
            <p><%= expense.date %></p>
            <input type="hidden" name="Id" value="<%= expense.Id %>" />
            <button type="submit" class="btn btn-danger">Delete Expense</button>
          </li>
        </form>
        <% }) %>
      </ul>
      <% } %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    >
        document.getElementById('expense-form').addEventListener('submit', async (event) => {
        event.preventDefault();

        const formData = new FormData(event.target);
        const data = {
          description: formData.get('description'),
          amount: formData.get('amount')
        };

        const response = await fetch('/auth/addExpense', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          const result = await response.json();
          console.log(result.message); // Log the success message

          // Optionally, update the expense list without reloading the page
          // loadExpenses();
        } else {
          console.error('Failed to add expense');
        }
      });
    </script>
  </body>
</html>
